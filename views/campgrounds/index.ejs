<% layout('layouts/boilerplate') %> 
<h1 class="my-5">All Campgrounds</h1>
<% for(campground of campgrounds) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img src="<%= campground.images[0].url %> " alt="Campground image" class="img-fluid">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.title %></h5>
                    <p class="card-text"><%= campground.description %></p>
                    <p class="class-text">
                        <small class="text-muted"><%= campground.location %> </small>
                    </p>
                    <a href="/campgrounds/<%= campground.id %> " class="btn btn-primary">View</a>
                </div>
            </div>
        </div>
    </div>
<% } %>
<a href="/campgrounds/new"><button>Add Campground</button></a>